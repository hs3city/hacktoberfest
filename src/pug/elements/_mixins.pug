mixin join_discord_button(title="Przyłącz się do nas na Discordzie!")
  a(href="https://discord.com/invite/C7b4JNvw3a", target="_blank")
    button.btn-discord=title

mixin fancyBox(edges = [])
    .lines-wrapper
      .box&attributes(attributes)
        block
      if edges.indexOf("top") !== -1
        .top-lines
      if edges.indexOf("bottom") !== -1
        .bottom-lines
      if edges.indexOf("left") !== -1
        .left-lines
      if edges.indexOf("right") !== -1
        .right-lines

mixin event(info, edges)
  article
    .circle
    +fancyBox(edges)&attributes(attributes)
      .top
        h3.sub-title #{info.title}
        h4.date Kiedy: 
          span #{info.date}
        h4.hours O której: 
          span #{info.hours}
        h4.where Gdzie: 
          span #{info.online ? 'Online' : 'Offline + streaming'}
      if block
        details.bottom 
          summary Agenda
          block
      else 
        .bottom
          +join_discord_button




mixin logo(url, name, alt, loading)
  .logo-sm 
    a(href=url, target="_blank")  
      img(src="/assets/img/" + name, alt=alt, loading="lazy")

